<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>liz abinante <%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "normalize", "skeleton", "all" %>
    <style>
      <%= Rouge::Themes::Github.render(:scope => '.highlight') %>
    </style>
  </head>
  <body>
    <div class="container">
      <div id="header">
        <h1>liz abinante</h1>
        <h2>software engineer, speaker, awesome human</h2>
      </div>

      <div class="row">
        <div class="one columns">
          <div id="navigation">
            <ul class="navigation">
              <li><a href="/">home</a></li>
              <li><a href="/writing">writing</a></li>
              <li><a href="/talks">talks</a></li>
              <li><a href="/about">about</a></li>
              <li><a href="/contact">contact</a></li>
              <li><a href="/speaker-info">speaking</a></li>
              <li><a href="http://tinyletter.com/feministy">subscribe</a></li>
              <li><a href="http://twitter.com/feministy">tweet</a></li>
            </ul>
          </div>
        </div>
        <div class="eleven columns">
          <div id="main" class="content">
          <% unless current_article.nil? %>
            <small class="date right"><%= current_article.date.strftime('%B %e, %Y') %></small>
            <h1><%= current_article.title %></h1>
          <% end %>
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="//use.typekit.net/wgi7bvy.js"></script>
  <script>try{Typekit.load({ async: true });}catch(e){}</script>
  </body>
</html>
