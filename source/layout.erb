<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>liz abinante <%= ' - ' + current_article.title unless current_article.nil? %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag "normalize", "skeleton", "all" %>
    <style>
      <%= Rouge::Themes::Github.render(:scope => '.highlight') %>
    </style>
  </head>
  <body>
    <div id="home">
      <div class="header">
        <ul class="navigation" role="menu">
          <li><a href="/">Home</a></li>
          <li><a href="/writing">Writing</a></li>
          <li><a href="/talks">Talks</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><a href="/speaker-info">Speaking</a></li>
          <li><a href="http://tinyletter.com/feministy">Subscribe</a></li>
          <li><a href="http://twitter.com/feministy">Twitter</a></li>
        </ul>
        <% if current_article.nil? %>
          <h1><%= current_page.url.gsub('/', '').gsub('-', ' ').capitalize %></h1>
      <% else %>
          <h1><%= current_article.title %></h1>
          <div class="meta">
            <% if current_article.tags.length > 1 %>
              <p><%= current_article.date.strftime('%B %e, %Y') %> | <%= formatted_article_tags(current_article.tags) %></p>
            <% else %>
              <p><%= current_article.date.strftime('%e %B %Y') %></p>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="content">
        <%= yield %>
        </div>
      </div>

    </div>
    <script src="https://use.typekit.net/ctb6cxw.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
  </body>
</html>
