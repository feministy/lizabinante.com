<div class="posts">
  <% most_recent(blog.articles, "blog").each_with_index do |article, i| %>
    <div class="row">
      <div class="columns ten">
        <p>
          <%= link_to article.title, article %>
          <br>
          <span class="tags">
            <% article.tags.each do |tag| %>
              <% if tag != 'blog' %><%= tag %><% end %>
            <% end %>
          </span>
        </p>
      </div>
      <div class="columns two">
        <small class="date"><%= article.date.strftime('%b %e, %Y') %></small>
      </div>
    </div>
  <% end %>
</div>