---
layout: single
---

<h1>writing</h1>
<div class="posts">
  <% most_recent(blog.articles, "blog").each_with_index do |article, i| %>
    <div class="post">
      <p>
        <%= link_to article.title, article %>
        <br>
        <span class="tag"><%= article.date.strftime('%B %e, %Y') %></span>
        <% article.tags.each do |tag| %>
          <% if tag != "blog" %>
            <span class="tag"><%= tag %></span>
          <% end %>
        <% end %>
      </p>
    </div>
  <% end %>
</div>